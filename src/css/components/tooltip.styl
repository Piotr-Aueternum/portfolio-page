.tooltip
  &__description
    background-color #b8efb8
    position absolute
    top 150%
    left 0
    z-index 3
    padding 1rem 1.5rem
    border-radius 5px
    box-shadow inset 0 0 0 2px #b8efb8, inset 0 0 0 5px #fff
    visibility hidden
    transition visibility 0s 0.5s, opacity 0.2s ease-in-out 0.3s
    opacity 0
    +max(sm)
      position fixed
      left 1.5rem
      top 50%
      width calc(100vw - 3rem)
      text-align justify
  &__heading
    cursor pointer
    display inline-block
    font-family 'Dosis', sans-serif
    font-weight 400
    background none
    border 0
    &::after
      +max(sm)
        content ' +'
    &:hover
    &:focus
      &::after
        +max(sm)
          content ' -'
      + 
        .tooltip
          &__description
            visibility visible
            transition visibility 0s 0.3s, opacity 0.2s ease-in-out 0.3s
            opacity 1
  &__lead
    position absolute
    top -1.5rem
    display block
    background-color #b8efb8
    padding 0 1rem
    border-radius 5px
    z-index -1