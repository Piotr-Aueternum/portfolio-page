.tooltip
	&__body
		width 25rem
		background-color #b8efb8
		position absolute
		top 150%
		left 0
		z-index 3
		padding 1rem 1.5rem
		border-radius 5px
		box-shadow inset 0 0 0 2px #b8efb8, inset 0 0 0 5px #fff
		
		visibility hidden
		transition visibility 0s 0.5s, opacity 0.2s ease-in-out 0.3s
		opacity 0
	&__init
		cursor pointer
		display inline-block
		&:hover
			+ 
				.tooltip__body
					visibility visible
					transition visibility 0s 0.3s, opacity 0.2s ease-in-out 0.3s
					opacity 1
	&__title
		position absolute
		top -1.5rem
		display block
		background-color #b8efb8
		padding 0 1rem
		border-radius 5px
		z-index -1