.introSection
	min-height 100vh
	display flex
	align-items center
	justify-content center
	&__heading
	&__lead
		font-weight 400
		text-align center
		letter-spacing 0.05rem
	&__heading
		position relative
		z-index 1
		&::before
			content ''
			position absolute
			top 0
			left -1rem
			height 100%
			width 0.3rem
			display block
			background-color #4c31ff
