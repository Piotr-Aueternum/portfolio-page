.intro
  min-height 100vh
  display flex
  align-items flex-start
  justify-content center
  flex-direction column
  +max(sm)
    padding-top 2rem
  &__heading
  &__lead
    font-weight 400
    letter-spacing 0.05rem
    position relative
    z-index 1
    text-shadow 1px 1px 0px #000
  &__heading
    margin-bottom 2rem
    +max(sm)
      font-size 3rem
    &::before
      content ''
      position absolute
      top 0
      left -1rem
      height 100%
      width 0.4rem
      display block
      background-color #000
      opacity 0.7
  &__lead
    font-family 'Dosis', sans-serif
  &__content
    line-height 1.7
    letter-spacing 0.05rem
    color #333
    font-weight 400
    &:not(:last-child)
      margin-bottom 1.6rem * 1.5
  &--home
    & ^[0]__heading
      &::before
        background-color #4c31ff
  &--about
    & ^[0]__heading
      &::before
        background-color #c40ce8
  &--skills
    & ^[0]__heading
      &::before
        background-color #f00
  &--projects
    & ^[0]__heading
      &::before
        background-color #e85f0c
  &--contact
    & ^[0]__heading
      &::before
        background-color #ffb70d
        